{ R,  ADDR}
{Ti1,    0}
{Ti2,    1}
{Ti3,    2}
{Ti4,    3}
}

# Analog inputs
file "$(MEASCOMP)/db/measCompVoltageIn.template"
{
pattern
{ R, ADDR,  LOPR, HOPR, RANGE,       SCAN, PREC}
{Ai1,   0,  -10.,  10.,   0,    "1 second",   5}
{Ai2,   1,  -10.,  10.,   0,    "1 second",   5}
{Ai3,   2,   -5.,   5.,   0,    "1 second",   5}
{Ai4,   3,   -5.,   5.,   0,    "1 second",   5}
}

