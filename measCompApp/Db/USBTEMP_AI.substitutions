{
pattern
{ R,   MASK,   ADDR}
{Bi1,  0x01,      0}
{Bi2,  0x02,      0}
{Bi3,  0x04,      0}
{Bi4,  0x08,      0}
{Bi5,  0x10,      0}
{Bi6,  0x20,      0}
{Bi7,  0x40,      0}
{Bi8,  0x80,      0}
}

